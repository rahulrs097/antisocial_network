<!DOCTYPE html>
<html>
  <head>
    <title>AntisocialNetwork</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <style>
    .anti-social-network {
      width: 50%;
      float: left;
      background-color: black;
      color: white;
      overflow: auto;
    }
  </style>

  <div style="text-align:center">
    <div style="width:50%;float:left;background-color:black;color:white;overflow:auto">
      <h1> <b> ANTI SOCIAL NETWORK </b> <h1>
    </div>
    <div style="width:50%;float:left">
      <div id="user_nav">
        <% if current_user %>
          <h3> Logged in as <%= current_user.username %>. </h3>
          <h3> <%= link_to "LOG OUT", log_out_path %> </h3>
        <% else %>
          <h3> <%= link_to "SIGN UP", sign_up_path %> </h3>
          <h3> <%= link_to "LOG IN", log_in_path %> </h3>
        <% end %>
      </div>
    </div>
  </div>

  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
