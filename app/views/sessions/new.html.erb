<div style="text-align:center">
  <h1>LOG IN</h1>
</div>

<style>
  .button {
    border: none;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 30px;
    align: center;
  }

  .label {
    width: 50%;
    float: left;
    text-align: center;
    font-size: 25px;
  }

  .text-field {
    width: 50%;
    float: left;
    text-align: left;
    font-size: 30px;
  }
</style>

<div id="user-log-in-form">
  <%= form_tag sessions_path do %>
    <div style="padding:10px">
      <div class="label"> <%= label_tag :username %> </div>
      <div class="text-field"> <%= text_field_tag :username, params[:username] %> </div>
    </div>
    <div style="padding:10px">
      <div class="label"> <%= label_tag :password %> </div>
      <div class="text-field"> <%= password_field_tag :password %> </div>
    </div>
    <div style="padding:10px;text-align:center">
      <div class="button"><%= submit_tag "Log in" %></p>
    </div>
  <% end %>
</div>
